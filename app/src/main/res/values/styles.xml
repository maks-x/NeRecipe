<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RecipeCardTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">4dp</item>

    </style>

    <style name="RecipeCardTextView.Title" parent="RecipeCardTextView">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="RecipeImageButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">?attr/colorControlNormal</item>
    </style>

    <style name="RecipeStageLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="endIconDrawable">@drawable/ic_link_checkable</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/color_link_button</item>
        <item name="startIconDrawable">@drawable/ic_baseline_delete_forever_24</item>
        <item name="startIconTint">@android:color/holo_red_light</item>
    </style>
</resources>